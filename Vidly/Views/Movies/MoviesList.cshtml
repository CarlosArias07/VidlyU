@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "MoviesList";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <text>We don´t have any movies yet</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @movie.Name
                    </td>

                </tr>
            }
        </tbody>
    </table>
}


